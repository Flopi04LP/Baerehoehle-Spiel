<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.bbbaden.bärehöhlispiel.FXML_HELPController">
   <children>
      <ImageView fitHeight="163.0" fitWidth="165.0" layoutX="269.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="/bilder/help.png" />
         </image>
      </ImageView>
      <Label layoutX="32.0" layoutY="191.0" text="Wie funktioniert das Spiel?">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="32.0" layoutY="230.0" prefHeight="20.0" prefWidth="505.0" text="Das Spiel hat 2 unbekannte Zahlen die wir herausfinden müssen." />
      <Label layoutX="32.0" layoutY="250.0" text="Nähmlich die Anzahl Bärehöhli und die Antahl Bäre." />
      <Label layoutX="32.0" layoutY="267.0" text="Um dies herauszufinden schauen wir uns zuerst die ungeraden Würfel an." />
      <Label layoutX="32.0" layoutY="284.0" text="Die Anzahl der ungeraden Würfel ist die Anzahl Bärehöhli." />
      <Label layoutX="32.0" layoutY="301.0" text="Um die Anzahl Bären herauszufinden nehmen wir die Zahlen auf der Rückseite der ungeraden Würfel." />
      <Label layoutX="32.0" layoutY="335.0" text="Bsp. 2 Würfel mit 5 und 2. 5 ungerade = 1 Bärehöhli. 7-5 = 2 also 2 Bäre.">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="32.0" layoutY="318.0" text="Die Vorder-und Rückseite eines Würfels müssen immer 7 ergeben." />
      <Button fx:id="buttonback" layoutX="568.0" layoutY="352.0" mnemonicParsing="false" onAction="#back" text="Zurück zum Spiel" />
   </children>
</AnchorPane>
